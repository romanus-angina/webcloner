# .env.example

# Application Settings
APP_NAME="Website Cloner"
DEBUG=false
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (flexible formats supported)
# Option 1: Comma-separated
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Option 2: JSON array (remember to escape quotes in shell)
# CORS_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000"]'

# Browser Automation Settings
BROWSER_TYPE=chromium
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30
BROWSER_NAVIGATION_TIMEOUT=30
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Browser Pool Settings
MAX_BROWSER_INSTANCES=5
BROWSER_POOL_SIZE=3
BROWSER_MAX_RETRIES=3
BROWSER_RETRY_DELAY=2

# Debug Settings
BROWSER_DEBUG=false
BROWSER_SLOW_MO=0

# Cloud Browser (Browserbase)
# BROWSERBASE_API_KEY=your_api_key_here
# BROWSERBASE_PROJECT_ID=your_project_id_here
USE_CLOUD_BROWSER=false

# External APIs
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Storage
TEMP_STORAGE_PATH=./data
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60